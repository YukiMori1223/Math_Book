  journal   = {Powder Technology},
  keywords  = {Corn-shaped particle,Discrete element method,Gas-solid flow,Particle mixing,Spouted bed},
  month     = {jan},
  pages     = {58--66},
  publisher = {Elsevier},
  title     = {{Numerical simulation on the mixing behavior of corn-shaped particles in a spouted bed}},
