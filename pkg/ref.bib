  issn      = {1873328X},
  journal   = {Powder Technology},
  keywords  = {Coarse graining DEM,DEM-CFD method,Immersed boundary method,Powder die-filling,Signed distance functions},
  month     = {jun},
  pages     = {83--95},
  publisher = {Elsevier B.V.},
  title     = {{Coarse graining DEM simulations of a powder die-filling system}},
  url       = {https://linkinghub.elsevier.com/retrieve/pii/S0032591020304320},
