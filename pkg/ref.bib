  journal   = {Powder Technology},
  keywords  = {Air effect,DEM/CFD,Density difference,Die filling,Powder flow,Segregation},
  month     = {jan},
  number    = {1-2},
  pages     = {111--119},
  publisher = {Elsevier},
  title     = {{Numerical analysis of density-induced segregation during die filling}},
